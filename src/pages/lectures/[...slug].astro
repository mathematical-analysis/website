const post = Astro.props;
const { Content } = await post.render();
---

<BlogLayout
  ><article class="">
    <h1 class="text-[40px] font-semibold leading-[44px]">
      {post.data.title}
    </h1>
    <hr class="my-4 opacity-10" />
    <div class="mt-10 prose prose-neutral prose-invert prose-img:rounded-lg">
      <Content />
    </div>
    <div class="mt-10 flex justify-between items-center space-x-8">
      {
        post.previousSlug && (
          <>
            <a
              href={`/lectures/${post.previousSlug}`}
              class="group text-gray-200 hover:text-sky-600 transition ease-in-out duration-200 bg-neutral-800/50 px-4 py-4 rounded-md truncate"
            >
              <span
                aria-hidden="true"
                class="inline-block -translate-x-0 group-hover:-translate-x-1 transition-transform ease-in-out duration-200"
              >
                ←
              </span>
              Previous lecture {post.previousSlug}, {post.previousPostTitle}
            </a>
          </>
        )
      }
      {
        post.nextSlug && (
          <>
            <a
              href={`/lectures/${post.nextSlug}`}
              class="group text-gray-200 hover:text-sky-600 transition ease-in-out duration-200 bg-neutral-800/50 px-4 py-4 rounded-md truncate"
            >
              Next lecture {post.nextSlug}, {post.nextPostTitle}
              <span
                aria-hidden="true"
                class="inline-block translate-x-0 group-hover:translate-x-1 transition-transform ease-in-out duration-200"
              >
                →
              </span>
            </a>
          </>
        )
      }
    </div>
  </article>
</BlogLayout>
